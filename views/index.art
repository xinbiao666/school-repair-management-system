<script>
    var form = document.querySelector('#form');
    $('#submit').on('click', function () {
        if ($('input[name="userid"]').val() == '' && $('input[name="password"]').val() == '') {
            alert('请输入账号或密码!');
        } else {
            var formdata = new FormData(form);
            var xhr = new XMLHttpRequest();
            xhr.open('post', 'http://localhost/handle/loginUser');
            xhr.send(formdata);
            xhr.onload = function () {
                if (xhr.status == 200) {
                    if (xhr.responseText == 'ok0') {
                        alert('登录成功!');
                        window.location.replace('http://localhost/user/userindex');
                    } else if (xhr.responseText == 'ok1') {
                        alert('登录成功!');
                        window.location.replace('http://localhost/user/maintainindex');
                    }else if(xhr.responseText=='fal'){
                        alert('账号或密码错误！');
                    }
                }
            }
        }
    })
</script>

